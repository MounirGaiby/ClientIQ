[flake8]
max-line-length = 127
exclude = 
    migrations/,
    __pycache__/,
    venv/,
    .git/,
    htmlcov/,
    .venv/,
    manage.py,
    */settings*.py
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (we use 127)
max-complexity = 10
per-file-ignores =
    __init__.py:F401
