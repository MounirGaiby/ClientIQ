# Development Environment Configuration Template
# Copy this to .env and customize for your local development

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=localhost
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Domain Configuration
MAIN_DOMAIN=localhost
PRODUCTION_DOMAIN=clientiq.com
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/clientiq_db
DATABASE_NAME=clientiq_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration (Development - uses console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=ClientIQ Team <noreply@clientiq.com>
SALES_EMAIL=sales@clientiq.com

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# API Configuration
API_VERSION=v1
BASE_URL=http://localhost:8000

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=DEBUG
