# Docker Development Environment Variables
# This file is used when running `docker-compose up`

# PostgreSQL Database
POSTGRES_DB=clientiq
POSTGRES_USER=clientiq
POSTGRES_PASSWORD=clientiq_dev_password

# Django Backend
SECRET_KEY=django-insecure-dev-key-for-docker-only
DEBUG=True
DATABASE_URL=postgresql://clientiq:clientiq_dev_password@db:5432/clientiq
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAIN_DOMAIN=localhost:5173
NODE_ENV=development
